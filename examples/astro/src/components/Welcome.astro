---
const { countryName } = Astro.locals.decision?.ip ?? {}

const hello = countryName ? `Hello to our Arcjet user in ${countryName}!` : "Hello Arcjet user!"
---

<section id="hero">
  <h1>
    {hello}
  </h1>
</section>

<style>
  #hero {
    display: flex;
    align-items: start;
    flex-direction: column;
    justify-content: center;
    padding: 16px;
    margin: 0 auto;
  }

  h1 {
    font-size: 22px;
    margin-top: 0.25em;
  }

  @media screen and (max-width: 768px) {
    #hero {
      display: block;
      padding-top: 10%;
    }

    h1 {
      line-height: 1.5;
    }
  }
</style>
